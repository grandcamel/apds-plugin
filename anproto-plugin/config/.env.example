# ANProto Environment Variables
# Copy this file to .env and fill in your values
# NEVER commit .env to version control!

# =============================================================================
# KEYPAIR CONFIGURATION
# =============================================================================

# Your ANProto keypair (132 characters)
# Generate with: await an.gen()
# ANPROTO_KEYPAIR=your-132-character-keypair-here

# Development keypair (optional, for dev environment)
# ANPROTO_DEV_KEYPAIR=your-dev-keypair-here

# =============================================================================
# OPTIONAL: DERIVED KEYS
# =============================================================================

# If you prefer to store public key separately (44 characters)
# This is safe to expose - it's your public identity
# ANPROTO_PUBLIC_KEY=your-44-character-public-key

# =============================================================================
# RUNTIME CONFIGURATION
# =============================================================================

# Runtime environment: deno, node, browser
# ANPROTO_RUNTIME=node

# Profile to use: development, production, testing
# ANPROTO_PROFILE=development

# =============================================================================
# VALIDATION SETTINGS
# =============================================================================

# Maximum age of messages to accept (milliseconds)
# Default: 86400000 (24 hours)
# ANPROTO_MAX_MESSAGE_AGE=86400000

# Maximum future timestamp tolerance (milliseconds)
# Default: 300000 (5 minutes)
# ANPROTO_FUTURE_TOLERANCE=300000
